

<% form_for(@ad,:url=>{:action=>'update'}) do |f| %>
	
<tr><%=f.error_messages%></tr>
<h1>Kemaskini : <%= @ad.name %></h1>
  <p><b>Nama Penjual</b><br /><%= f.text_field :name %></p>
  <p><b>Email</b><br /><%= f.text_field :email %></p>
  <p><b>Barangan</b><br /><%= f.text_field :heading %></p>
  <p><b>Perincian</b><br /><%= f.text_area :ad_text %></p>
  <p><b>Nombor Telefon</b><br /><%= f.text_field :phone_number %></p>
  <p><b>Diskaun</b><br /><%= f.text_field :post_code %></p>
  <p><b>Harga RM</b><br /><%= f.text_field :price %></p>
  <p><b>Imej</b><br /><%= f.text_field :img_url %></p>
  
  <p><label for="ads_picture">Picture</label><br />
<%= file_field 'ads', 'pictureimg' %></p>
  
  <p><%= f.submit "Kemaskini" %>

<% form_for(@ad,:url=>{:action=>'destroy'}) do |f| %>
<%= f.submit "Padam" %></p>
<% end %>

<% end %>