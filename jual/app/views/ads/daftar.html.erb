<h1>Daftar Ahli</h1> 
<% form_for(@ad,:url=>{:action=>'daftar'}) do |f| %>
  <p><b>Name</b><br /><%= f.text_field :name %></p>
  <p><b>Email</b><br /><%= f.text_field :email %></p>
  <p><b>Phone_Number</b><br /><%= f.text_field :phone_number%></p> 
  <p><b>Diskaun</b><br /><%= f.text_field :post_code %></p>
  <p><%= f.submit "Daftar" %></p>
<% end %>